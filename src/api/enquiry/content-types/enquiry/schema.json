{
  "kind": "collectionType",
  "collectionName": "enquiries",
  "info": {
    "singularName": "enquiry",
    "pluralName": "enquiries",
    "displayName": "Enquiry",
    "description": "Contact form enquiries"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "firstName": {
      "type": "string",
      "required": true
    },
    "lastName": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true
    },
    "subject": {
      "type": "string",
      "required": true
    },
    "message": {
      "type": "text",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": ["new", "in-progress", "resolved"],
      "default": "new"
    }
  }
}
